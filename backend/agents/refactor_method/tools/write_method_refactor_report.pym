"""Write a method-level refactor report for the swarm demo."""

from grail import Input

target: str = Input("target", description="Method name and file path.")
summary: str = Input("summary", description="1-2 sentence summary of the method and risk.")
side_effects: str = Input("side_effects", description="Side effects and hidden dependencies.")
refactor_moves: str = Input("refactor_moves", description="Concrete refactor suggestions.")
tests: str = Input("tests", description="Suggested tests or validation steps.")

result = {
    "kind": "method_refactor_report",
    "target": target,
    "summary": summary,
    "side_effects": side_effects,
    "refactor_moves": refactor_moves,
    "tests": tests,
}

result
